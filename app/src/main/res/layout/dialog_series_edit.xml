<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nombre_de_la_serie"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etSeriesName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ej_serie_1"
            android:inputType="text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/repeticiones"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etSeriesReps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ej_10"
            android:inputType="number"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/tiempo_segundos"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etSeriesDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ej_60"
            android:inputType="number"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/asignar_ejercicio"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spinnerExerciseDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
</ScrollView>
