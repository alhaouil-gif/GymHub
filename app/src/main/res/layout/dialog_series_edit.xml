<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de la serie"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etSeriesName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Serie 1"
            android:inputType="text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Repeticiones"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etSeriesReps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: 10"
            android:inputType="number"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Tiempo (segundos)"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etSeriesDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: 60"
            android:inputType="number"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Asignar ejercicio"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spinnerExerciseDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
</ScrollView>
