<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etExerciseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del ejercicio"/>

        <EditText
            android:id="@+id/etExerciseDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DescripciÃ³n"/>


        <EditText
            android:id="@+id/etExerciseRest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descanso (segundos)"
            android:inputType="number"/>

        <Spinner
            android:id="@+id/spinnerWorkoutDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
